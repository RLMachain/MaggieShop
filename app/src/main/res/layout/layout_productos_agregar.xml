<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco">

    !--header-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <!--Titulo-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/blanco"
            android:text="Agregar Producto" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <!-- categoria-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:text="Categoria:"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/borderfield">

                    <Spinner
                        android:id="@+id/categoria_agregarproducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- nombre-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:text="Nombre:"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderfield"
                    android:padding="1dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/backedit_noborders"
                        android:id="@+id/nombre_addproducto"/>

                </LinearLayout>

            </LinearLayout>

            <!-- des-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:text="DescripciÃ³n:"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderfield"
                    android:padding="1dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:id="@+id/des_addproducto"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/backedit_noborders"/>

                </LinearLayout>

            </LinearLayout>

            <!-- costo / precio-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <!--costo-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:text="Costo:"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borderfield"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="@color/colorPrimary"/>

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:id="@+id/costo_addproducto"
                            android:textColor="@color/colorPrimary"
                            android:textAlignment="center"
                            android:background="@drawable/backedit_noborders"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- precio-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="5dp"
                        android:text="Precio:"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borderfield"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textColor="@color/colorPrimary"/>

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:id="@+id/precio_addproducto"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/backedit_noborders"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- existencia-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:text="Existencia: 0"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/existencia_addproducto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/btnmenosexistencia_addproducto"
                        android:src="@mipmap/ic_icon_menos"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/btnmasexistencia_addproducto"
                        android:src="@mipmap/ic_icon_mas"/>

                </LinearLayout>

            </LinearLayout>

            <!--btn-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:layout_gravity="center">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="GUARDAR"
                    android:textColor="@color/blanco"
                    android:background="@drawable/background_buttons"
                    android:id="@+id/guardar_addproducto"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>